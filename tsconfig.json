{
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
    }
  },
   "include": [
        "./src",
    ],
  "exclude": ["node_modules"]
}